ARG TAG=rawhide
FROM registry.fedoraproject.org/fedora:${TAG}
ENV LANG=C.utf8

RUN cat /etc/os-release

RUN dnf -y update && \
    dnf -y install \
    gcc \
    make \
    python3 \
    python3-pip \
    python3-gobject-base \
    dbus-daemon \
    && dnf clean all

COPY requirements.txt .

RUN pip3 install -U pip && \
    pip3 install -U -r requirements.txt
